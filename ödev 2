// soru 1

// ilk olarak bir liste tanımladım
void main() {
  List<int> sayilar = [3, 6, 9];
}
int toplam(List<int> sayilar) {
  int total=0;

  for int( sayi in sayilar){
  total += sayilar;
}
  print(total);
}


// soru 2

void main() {
  List<int> sayilar = [1, 2, 3, 4, 5, 6, 7, 8, 9];
  List<int> tekSayilar = tekSayilariFiltrele(sayilar);
  print(tekSayilar);  
}

List<int> tekSayilariFiltrele(List<int> sayilar) {
  List<int> tekSayilar = [];

  for (int sayi in sayilar) {
    if (sayi % 2 != 0) {
      tekSayilar.add(sayi);
    }
  }

  return tekSayilar;
}



// soru 3

List<int> listeyiTersCevir<int>(List<int> liste) {
  return liste.reversed();
}

void main() {
  List<int> sayilar = [1, 2, 3, 4, 5];
  List<int> tersSayilar = listeyiTersCevir(sayilar);
  
  print(tersSayilar);  
}


